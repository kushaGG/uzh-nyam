<h1>Editing Catalog</h1>

<%= form_with(model: @catalog, local: true) do |form| %>
  <div class="actions">
    <%= form.label :approved %>
    <%= form.check_box :approved %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @catalog.title %>
</p>

<p>
  <strong>Category:</strong>
   <%= @catalog.category.title %>
</p>

<p>
  <strong>Location:</strong>
  <%= link_to @catalog.location, @catalog.location %>
</p>

<p>
  <strong>Phone number:</strong>
  <%= @catalog.phone_number %>
</p>

<% if @catalog.open_time_monday == "2000-01-01 00:00:00" && @catalog.close_time_monday == "2000-01-01 00:00:00"%>
  <p> Monday: We close </p>
<% else %>
  <p>
    <strong>Time monday:</strong>
    <%= @catalog.open_time_monday.strftime("%H:%M") %> -
