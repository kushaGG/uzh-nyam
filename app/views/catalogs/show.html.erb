<div  class="showpage">
<p id="notice"><%= notice %></p>
 <section class="main-slider photo-slidewrap" >
   <div class="bx-wrapper" style="max-width: 100%;">
     <div class="bx-viewport" style="width: 100%; overflow: hidden; position: relative; height: 700px;">
       <div class="photo-slide" style="width: auto; position: relative;">
         <div class="slide" style="float: none; list-style: none; position: absolute; z-index: 50; display: block; width: 1300px;">

           <%= image_tag(@catalog.photos[0].url, size: "1300x700")%>
           <div class="res-title">
              <p class="showpole"><%= @catalog.title %></p>
              </div>
              <div class="aver">
              <p class="showpole1">Середній рейтинг</p>
              <div class="average-review-rating" data-score=" <%= @average_review %> "></div>

              <p class="showpole1">Базується на  <%= @catalog.reviews.count %> reviews</p>
              </div>
              <div class="shadow"></div>


          </div>
         </div>
        </div>
      </div>

 </section>
