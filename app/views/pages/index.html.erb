<% @categories.each do |x| %>
  <%= link_to category_path(x) do %>
    <%= image_tag(x.image.url, size: "200x200") %> <br>
    <%= x.title %> <br>
  <% end %>
<% end %>

<%= form_tag search_catalogs_path, method: :get do |f| %>
  <%= text_field_tag :search, nil, :placeholder => "search" %>
  <%= submit_tag "Search" %>
<% end %>